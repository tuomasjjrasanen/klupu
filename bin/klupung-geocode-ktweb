set -eu

on_exit()
{
    local exitval=$?

    if [ -n "${tmpfile}" ]; then
        rm -f "${tmpfile}"
    fi

    return $exitval
}

geocoder_url='http://jkl.paatokset.fi/hsgeocoder/document/html/'
ktweb_dir=$1
ktweb_city=$2

tmpfile=

trap on_exit EXIT

tmpfile=$(mktemp)

find "${ktweb_dir}" -type f -name 'htmtxt*.htm' >"${tmpfile}"

while read agenda_item_path; do
    geometry_path="${agenda_item_path}.geometries.json"
    if [ -f "${geometry_path}" ]; then
        continue
    fi
    curl \
        --silent \
        --show-error \
        --fail \
        --request POST "${geocoder_url}/${ktweb_city}" \
        --data-binary "@${agenda_item_path}" \
        --output "${geometry_path}"
done <"${tmpfile}"
